                            <span class="oi oi-pencil" aria-hidden="true"></span> Add Contracts
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="navbar-expand-md" href="agreementsList">
                            <span class="oi oi-book" aria-hidden="true"></span>All-Contracts
                        </NavLink>
                    </li>
                </ul>
            }
            </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=>expandSubNav4 = !expandSubNav4">
                <span class="oi oi-plus" aria-hidden="true"></span> Contacts
            </NavLink>
            @if (expandSubNav4)
            {
                <ul>
                    <li class="nav-item px-3">
                        <NavLink class="navbar-expand-md" href="createcontact">
                            <span class="oi oi-file" aria-hidden="true"></span> Create Contact
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="navbar-expand-md" href="contactslist">
                            <span class="oi oi-task" aria-hidden="true"></span>All-Contacts
