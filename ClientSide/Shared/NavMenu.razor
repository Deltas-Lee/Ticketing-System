            </NavLink>
            @if (expandSubNav1)
            {
                <ul>
                    <li class="nav-item px-3">
                        <NavLink class="navbar-expand-md" href="createasset">
                            <span class="oi oi-laptop" aria-hidden="true"></span> Add Asset
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
