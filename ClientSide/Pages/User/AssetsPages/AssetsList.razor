@page "/assetslist"
@inherits  User.GenericClasses.GenericListBase<Asset>
@using Models.AssetModels


<h3>List of all Assets</h3>

@if (entities == null)
{
    <div class="spinner"></div>
}

else
{

    <p>Total number of assets: @entities.Count()</p>


    <div>
        <table class="table table-hover">
            <tr>
                <td><b>Asset #</b></td>
                <td><b>Asset Name</b></td>
                <td><b>Asset Type</b></td>
                <td><b>Client Name/Id</b></td>
                <td><b>Serial Number</b></td>
                <td><b>Action</b></td>
            </tr>


            @foreach (var asset in entities)
            {
        <tr>
            <td>@asset.Id</td>
            <td>@asset.AssetName</td>
            <td>@asset.AssetType</td>
            <td>@asset.ClientId</td>
            <td>@asset.SerialNumber</td>
            <td>
                <a href="editasset/@asset.Id.ToString()" class="col-form-label">Edit |</a>
                @* <a href="#" class="col-form-label" >View |</a>*@
                <a href="#" class="col-form-label"> Delete</a>
            </td>
        </tr>
            }

        </table>

    </div>
}

