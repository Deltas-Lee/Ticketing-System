@page  "/editagreement/{Id}"
@page "/createAgreement"
@using Models.AgreementModels
@inherits User.GenericClasses.EditGenericBase<Agreement, EditAgreementModel>



@using TicketSystem.Pages.User.GenericClasses
@using System.ComponentModel.DataAnnotations
@using System.Dynamic


<h3>@PageHeader</h3>

<EditForm Model="@editModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    @*<ObjectGraphDataAnnotationsValidator>

        </ObjectGraphDataAnnotationsValidator>*@


    <hr />
    <ValidationSummary />
    <div class="form-group row">
        <label for="agreementType" class="col-sm-2 col-form-label">
            Agreement Type
        </label>
        <div class="col-sm-10">
            <InputText id="agreementType" class="form-control" placeholder="Agreement Type"
                       @bind-Value="editModel.AgreeType" />
            <ValidationMessage For="@(() => editModel.AgreeType)" />
        </div>

    </div>

    <div class="form-group row">
        <label for="description" class="col-sm-2 col-form-label">
            Description
        </label>
        <div class="col-sm-10">
            <InputText id="description" class="form-control" placeholder="Description"
                       @bind-Value="editModel.Description" />
            <ValidationMessage For="@(() => editModel.Description)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="lastUpdated" class="col-sm-2 col-form-label">
            Last Updated
        </label>
        <div class="col-sm-10">
            <InputDate id="lastUpdated" class="form-control" placeholder="@DateTime.Today"
                       @bind-Value="editModel.LastUpdated" />
            <ValidationMessage For="@(() => editModel.LastUpdated)" />
        </div>
    </div>



    <button class="btn btn-primary" type="submit">Submit</button>

    @if (editModel.Id != new Guid())
    {
        <button class="btn btn-danger" type="button" @onclick="Delete_Click">
            Delete
        </button>
    }

    <Confirm @ref="DeleteConfirmation" ConfirmationChanged="ConfirmDelete_Click"
             ConfirmationMessage=@($"Are you sure you want to delete the Agreement \"{Entity.AgreeType}\" ")>
    </Confirm>


</EditForm>

